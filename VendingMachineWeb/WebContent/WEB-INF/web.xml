<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <display-name>VendingMachineWeb</display-name>

  <servlet>
    <servlet-name>BootMachine</servlet-name>
    <servlet-class>com.awesomevendingco.vendingmachine.ui.BootMachineServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>BootMachine</servlet-name>
    <url-pattern>/bootmachine</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>InsertCoinServlet</servlet-name>
    <servlet-class>com.awesomevendingco.vendingmachine.ui.InsertCoinServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InsertCoinServlet</servlet-name>
    <url-pattern>/insertcoin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProductServlet</servlet-name>
    <servlet-class>com.awesomevendingco.vendingmachine.ui.ProductServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ProductServlet</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>

</web-app>